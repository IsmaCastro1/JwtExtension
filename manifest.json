{
  "manifest_version": 3,
  "name": "Bearer Token Retriever",
  "version": "2.0",
  "description": "Obtiene el Bearer Token y lo copia al portapapeles.",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ]
}

