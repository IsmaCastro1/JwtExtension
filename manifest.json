{
  "manifest_version": 2,
  "name": "Bearer Token Retriever",
  "version": "2.0",
  "description": "Obtiene el Bearer Token y lo copia al portapapeles.",
  "permissions": ["storage", "activeTab"],
  "browser_action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ]
}

